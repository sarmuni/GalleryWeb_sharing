@Html.ValidationSummary(false, "", new { @class = "text-danger" })

@if ( ViewBag.Success == true )
{
    <p id="validationResult" class = "text-primary">Group was successfully added to the group list</p>
}
else
{
    <p id="validationResult"></p>
}

